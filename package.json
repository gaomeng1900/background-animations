{
	"name": "background-animations",
	"version": "0.4.6",
	"private": false,
	"license": "MIT",
	"type": "module",
	"description": "A minimal WebGL2 ESM library for background animations.",
	"keywords": [
		"webgl",
		"animation",
		"visual effects"
	],
	"main": "build/index.js",
	"module": "build/index.js",
	"types": "build/index.d.ts",
	"exports": {
		".": {
			"import": "./build/index.js",
			"types": "./build/index.d.ts"
		}
	},
	"files": [
		"build/*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gaomeng1900/background-animations.git"
	},
	"homepage": "https://gaomeng1900.github.io/background-animations/",
	"sideEffects": false,
	"scripts": {
		"start": "npm run dev",
		"dev": "vite -c vite.config.ts",
		"build:demo": "vite build -c vite.config.ts",
		"build:lib": "vite build -c vite.lib.config.ts",
		"build:types": "tsc --emitDeclarationOnly",
		"build": "npm run build:lib && npm run build:types",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,cts,mjs,mts}": [
			"npx prettier --write --ignore-unknown",
			"npx eslint --quiet"
		],
		"*.{jsx,tsx}": [
			"npx prettier --write --ignore-unknown",
			"npx eslint --quiet"
		],
		"*.css": [
			"npx prettier --write --ignore-unknown"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				0,
				"never"
			]
		}
	}
}
